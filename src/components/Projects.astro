---
import { Image } from 'astro:assets';

// Import images directly
import appTrippaBig from '../images/app-trippa-big.png';
import appTrippaFull from '../images/app-trippa-full.png';
import webTrippaOne from '../images/web-trippa-1.png';
import webTrippaTwo from '../images/web-trippa-2.png';
import webReadlyHero from '../images/web-readly-hero.png';
import webCyberHero from '../images/web-cyber-hero.png';
import brandingFFMain from '../images/branding-ff-main.png';
import brandingFFSecond from '../images/branding-ff-second.png';
import webFFHero from '../images/web-ff-hero.png';
import webLawlyHero from '../images/web-lawly-hero.png';
import webCarelaHero from '../images/web-carela-hero.png';
import webCostaHero from '../images/web-costa-hero.png';
import webFusionFlowHero from '../images/web-fusionflow-hero.png';
import webMVPHero from '../images/web-mvp-hero.png';
import webRentalinduHero from '../images/web-rentalindu-hero.png';

const images = [
  { src: appTrippaBig, alt: 'Trippa App - Main Interface' },
  { src: appTrippaFull, alt: 'Trippa App - Full View' },
  { src: webTrippaOne, alt: 'Trippa Web - Feature 1' },
  { src: webTrippaTwo, alt: 'Trippa Web - Feature 2' },
  { src: webReadlyHero, alt: 'Readly Web App' },
  { src: webCyberHero, alt: 'Cyber Security Project' },
  { src: brandingFFMain, alt: 'FeatherFlow Branding - Main' },
  { src: brandingFFSecond, alt: 'FeatherFlow Branding - Secondary' },
  { src: webFFHero, alt: 'FeatherFlow Web - Hero' },
  { src: webLawlyHero, alt: 'Lawly Web App' },
  { src: webCarelaHero, alt: 'Carela Web App' },
  { src: webCostaHero, alt: 'Costa Web App' },
  { src: webFusionFlowHero, alt: 'FusionFlow Web App' },
  { src: webMVPHero, alt: 'MVP Project' },
  { src: webRentalinduHero, alt: 'Rentalindu Web App' },
];
---

<div class="projects">
    <div class="images">
        {images.map((img, index) => (
            <Image
                src={img.src}
                alt={img.alt}
                loading="lazy"
                quality={100}
                format={'webp'}
                width={2400}
                class="project-image"
            />
        ))}
    </div>
</div>

<style>
.projects {
    width: 100%;
    margin: 0;
    padding: 0;
    display: block;
    max-width: 100%;
}

.images {
    width: 100%;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.project-image {
    width: 100%;
    max-width: 100%;
    height: auto;
    display: block;
    margin: 0;
    padding: 0;
    border: 1px solid rgba(0, 0, 0, 0.05);
    border-radius: 8px;
}
</style>