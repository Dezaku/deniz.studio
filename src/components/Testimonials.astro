---
import { Image } from 'astro:assets';
import januPFP from '../images/janu_pfp.jpg'
---
<div class="testimonials-container">
            <h2>Testimonials</h2>
<div class="testimonials">
<div class="testAndPerson">
    <h3>"Deniz helped us fixing our website.  He really thought things through, made good recommendations and did it all in a very short space of time.  We had a tight deadline and he delivered.  Thank you, Deniz!"</h3>
    <div class="personAndPic">
        <Image src={januPFP} id={"pfp"} alt="Image of Janusan Lingeswaran" width={24}/>
        <p>Janusan Lingeswaran - Feather Flow</p>
    </div>
</div>
</div>
    
</div>

<style>
    h2 {
 font-size: 16.875px;
 font-family: "Inter Variable", "Inter", sans-serif;
 font-weight: 400;
 margin-bottom: -8px;
}

.testimonials {
    margin-top: 0px;
}

p {
  text-wrap: pretty;
  color: #1e1e1e;
  font-size: 13px;
  margin-top: 0px;
}
h3 {
  text-wrap: balance;
  font-size: 15px;
  color: #1e1e1e;
  font-weight: 400;
}
.testimonials-container {
    max-width: 650px;
    width: 100%;
}

.testimonials {
    /* margin-bottom: 0px;
    max-width: 650px;
    display: flex;
    flex-direction: column;
    gap: 0px;  */
}

.testimonial {
    display: flex;
    align-items: center;
    flex-direction: row;
    margin-bottom: -6px;
    gap: 22px;
}

.personAndPic {
    display: flex;
    align-items: center;
    gap: 6px;
}
#pfp {
    border-radius: 100px;
}

.testAndPerson {
    display: flex;
    flex-direction: column;
    gap: -52px;
}

p {
    margin-bottom: 0px;
}

@media (max-width: 480px) {
    .personAndPic {
        gap: 4px;
    }
    
    h3 {
        font-size: 14px;
    }
    
    p {
        font-size: 12px;
    }
}
</style>